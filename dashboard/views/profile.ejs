<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 space-y-8">

  <!-- User Profile Card -->
  <div class="bg-white/5 border border-white/10 rounded-2xl p-8 text-center feature-card">
    <!-- User Avatar with fallback -->
    <img 
      src="<%= user.avatar ? `https://cdn.discordapp.com/avatars/${user.id}/${user.avatar}.png?size=128` : `https://cdn.discordapp.com/embed/avatars/${user.discriminator % 5}.png` %>" 
      alt="Avatar" 
      class="rounded-full mx-auto mb-4 w-24 h-24"
    >

    <!-- Username and Discriminator -->
    <h4 class="text-2xl font-bold text-white mb-1"><%= user.username %></h4>
    <p class="text-white/70 mb-4">#<%= user.discriminator %></p>

    <!-- Premium Status -->
    <% if (premium) { %>
      <span class="inline-block bg-green-600 text-white text-sm px-4 py-2 rounded-full mb-2">Premium User</span>
      <p class="text-white/70 text-sm">
        Expires:
        <%= premium.premium && premium.premium.expiresAt ? new Date(premium.premium.expiresAt).toLocaleDateString() : 'Never' %>
      </p>
    <% } else { %>
      <a href="/premium" class="inline-flex items-center justify-center gradient-bg px-6 py-3 rounded-xl font-semibold hover:opacity-90 transition-opacity duration-300">
        Get Premium
      </a>
    <% } %>
  </div>

  <!-- Guilds Card -->
  <div class="bg-white/5 border border-white/10 rounded-2xl p-8 feature-card">
    <div class="mb-6">
      <h5 class="text-xl font-bold text-white mb-4">Your Servers</h5>
    </div>
    <div class="space-y-4">
      <% if (guilds && guilds.length > 0) { %>
        <% guilds.forEach(guild => { %>
          <div class="flex justify-between items-center p-4 bg-white/5 rounded-xl border border-white/10 hover:bg-white/10 transition-colors">
            <div class="flex items-center gap-3">
              <img 
                src="<%= guild.icon ? `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png?size=64` : '/default-guild-icon.png' %>" 
                alt="Guild Icon" 
                class="rounded-xl w-10 h-10"
              >
              <span class="text-white font-medium"><%= guild.name %></span>
            </div>
            <a href="/guild/<%= guild.id %>" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg text-sm font-medium transition-colors">
              Manage
            </a>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-white/70">You are not part of any servers yet.</p>
      <% } %>
    </div>
  </div>

</div>
